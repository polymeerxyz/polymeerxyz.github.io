---
import { Image } from "astro:assets";
import logo from "../../assets/logo.jpg";
import IconBlog from "../../assets/svgs/ic_blog.svg";
import IconDiscord from "../../assets/svgs/ic_discord.svg";
import IconMedium from "../../assets/svgs/ic_medium.svg";
import IconTelegram from "../../assets/svgs/ic_telegram.svg";
import IconTwitterDefault from "../../assets/svgs/ic_twitter_default.svg";
---

<footer id="footer" class="bg-black py-24">
  <div class="max-w-screen-xl m-auto flex flex-col gap-16 text-white">
    <div class="flex w-full">
      <div class="w-1/2">
        <a href="#" class="footer-logo">
          <Image src={logo} alt="Logo" width={25} height={25} />
        </a>
      </div>

      <div class="w-1/2">
        <div class="flex justify-end">
          <div class="flex gap-3.5">
            <a
              href="#"
              target="_blank"
              aria-label="Twitter"
              class="bg-gray-900 min-w-10 min-h-10 flex justify-center items-center rounded-2xl"
            >
              <Image
                src={IconTwitterDefault}
                alt="Twitter"
                width={18}
                height={16}
              />
            </a>
            <a
              href="#"
              target="_blank"
              aria-label="Telegram"
              class="bg-gray-900 min-w-10 min-h-10 flex justify-center items-center rounded-2xl"
            >
              <Image src={IconTelegram} alt="Telegram" width={18} height={18} />
            </a>
            <a
              href="#"
              target="_blank"
              aria-label="Medium"
              class="bg-gray-900 min-w-10 min-h-10 flex justify-center items-center rounded-2xl"
            >
              <Image src={IconMedium} alt="Medium" width={20} height={12} />
            </a>
            <a
              href="#"
              target="_blank"
              rel="nofollow"
              aria-label="Blog"
              class="bg-gray-900 min-w-10 min-h-10 flex justify-center items-center rounded-2xl"
            >
              <Image src={IconBlog} alt="Blog" width={12} height={17} />
            </a>
            <a
              href="#"
              target="_blank"
              aria-label="Discord"
              class="bg-gray-900 min-w-10 min-h-10 flex justify-center items-center rounded-2xl"
            >
              <Image src={IconDiscord} alt="Discord" width={20} height={16} />
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="w-1/2 grid grid-cols-3 gap-8">
      <div class="flex flex-col gap-3">
        <div class="text-xl font-semibold">Product</div>
        <ul class="flex flex-col gap-3">
          <li>
            <a
              onclick="subwallet.Helpers.sendEventGa('footer_overview', 'https://www.subwallet.app/')"
              class="text-base font-medium relative pb-0.5 hover:text-emerald-300 hover:after:w-full hover:after:left-0 hover:after:right-auto after:content-[''] after:w-0 after:h-[1px] after:absolute after:left-auto after:right-0 after:bottom-0 after:bg-emerald-300 after:transition-[width_.6s_cubic-bezier(.25,.8,.25,1)_0s]"
            >
              Overview
            </a>
          </li>
          <li>
            <a
              onclick="subwallet.Helpers.sendEventGa('footer_download', 'download.html')"
